<h3>Leaves You have applied</h3>
<hr>

<table class = "table table-condensed table-striped table-hover">
  <thead>
    <tr>
      <th>Leave Type</th>
      <th>Date</th>
      <th>Reason</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @time_offs.each do |time_off| %>
      <tr>
        <% if time_off.user_id == current_user.id %>
        <td><%= time_off.leave_type %></td>
        <td><%= time_off.date %></td>
        <td><%= time_off.reason %></td>
        <td><%= link_to 'Show', user_time_off_path(@user, time_off), :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Edit', edit_user_time_off_path(@user, time_off), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', user_time_off_path(@user, time_off), method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Time off', new_user_time_off_path, :class => 'btn btn-primary' %>
