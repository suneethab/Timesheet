    <tr>
      <th><h3>TimeOff Details :</h3><th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td>Leave Type :</td>
        <td><%= @time_off.leave_type %></td>
      </tr>
      <tr>
        <td>Type :</td>
        <td><%= @time_off.type %></td>
      </tr>
      </tr>
