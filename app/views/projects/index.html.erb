

<table class="breadcrumb table table-striped table-condensed table-hover">
   <thead>
    <th><h3>Listing projects</h3><th>
    <tr>
      <th>Project Name</th>
      <th>Client</th>
      <th>Project Status</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.project_name %></td>
        <td><%= project.client %></td>
        <td><%= project.project_status %></td>
        <td>&emsp;<%= link_to 'Show', project, :class => 'btn btn-mini btn-info' %></td>
        <td>&emsp;<%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-mini' %></td>
        <td>&emsp;<%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>

<tr><td></td><td><%= link_to 'New project', new_project_path, :class => 'btn btn-primary' %></td></tr>
</table>