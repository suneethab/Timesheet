<h1>Listing feedbacks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Feedback</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.name %></td>
        <td><%= feedback.feedback %></td>
        <td><%= link_to 'Show', feedback, :class => 'btn btn-mini btn-info' %></td>
        <td><%= link_to 'Edit', edit_feedback_path(feedback), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', feedback, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feedback', new_feedback_path, :class => 'btn btn-primary' %>
