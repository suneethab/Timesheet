
<div style = "background-color: white; margin-left: 100px;">

<h2 style = "margin-left: 100px;">Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div style = "margin-left: 100px;"><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div style = "margin-left: 100px;"><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<div style = "margin-left: 100px;"><%= render "devise/shared/links" %>
</div>
</div>

