<h1>Editing task</h1>

<%= form_for(:task, :url => { :action => :update }, :html => {:method => :put}) do |f| %>
<% if @task.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

  <ul>
    <% @task.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :task %><br>
  <%= f.text_field :task %>
</div>
<div>
  <%= f.label :under_project %> <br/>
  <%= f.select :under_project, Project.all.map {|p| [p.project_name, p.id]} %>
</div>
<div>
  <%= f.label :assigned_to %><br/>
  <%= f.select :assigned_to, User.all.map {|u| [u.email, u.id]}, :include_blank => 'Please Select' %>
</div>
<div class="field">
  <%= f.label :expected_end_date %><br>
  <%= f.date_select :expected_end_date %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>

<%= link_to 'Show', user_task_url(@user, @task), :class => 'btn btn-mini btn-info' %> |
<%= link_to 'Back', user_tasks_url, :class => 'btn btn-mini' %>
