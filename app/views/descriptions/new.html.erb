<h3>Today Status Report:</h3>

<%= form_for(:description, :url => { :action => :create }, :html => {:method => :post}) do |f| %>
  
  <%= render :partial => "form", :locals => { :f => f } %>

  <div class="field">
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', user_descriptions_path %>
